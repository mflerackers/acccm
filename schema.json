{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "title": "Commercial",
    "description": "A TV commercial",
    "type": "object",
    "properties":{
        "name": {
            "description": "title of the commercial",
            "type": "string"
        },
        "url": {
            "description": "url to the video",
            "type": "string"
        },
        "date": {
            "description": "date when the commercial was aired",
            "type": "string"
        },
        "tags": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "minItems": 1,
            "uniqueItems": true
        },
        "people": {
            "type": "array",
            "items": {
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "tags": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "minItems": 1,
                        "uniqueItems": true
                    }
                }
            },
            "minItems": 1,
            "uniqueItems": true
        },
        "scenes": {
            "type": "array",
            "items": {
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "tags": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "minItems": 1,
                        "uniqueItems": true
                    }
                }
            },
            "minItems": 1,
            "uniqueItems": true
        },
        "relationships": {
            "type": "array",
            "items": {
                "properties": {
                    "from": {
                        "type": "string"
                    },
                    "to": {
                        "type": "string"
                    },
                    "tags": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "minItems": 1,
                        "uniqueItems": true
                    }
                }
            }
        }
    },
    "required": ["name", "date"]
}